<div class="cart">
<h3>ショッピングカート</h3>
<div class="air">
	<%= link_to "カートを空にする",cart_items_path,mathod: :delete,class: "btn btn-danger" %>
</div>

<table class='cart_table'>
	<thead>
      <tr class="border">
		<th>商品名</th>
		<th></th>
		<th class="border">単価(税込)</th>
	    <th class="border">数量</th>
		<th class="border">小計</th>
		<th class="border"></th>
	  </tr>
	</thead>

	<tbody>
	<% @customer.cart_items.each do |cart_item| %>
      <tr class="border">
        <td><%= attachment_image_tag cart_item.product,:image,size: "50×50",fallback: "no_image.jpg" %></td>
        <td><span><%= cart_item.product.name %></span></td>
        <td class="border"><%= cart_item.product.price_with_tax %></td>
        <td class="border"></td>
	    <td class="border"></td>
	    <td class="border"><%= link_to"削除する",cart_item_path(cart_item.id),method: :delete,class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
    
</table>

<table class='cart_table2'>
	<thead>
	  <tr class="border">
      <th class="border">合計</th>
	  <th class="border"></th>
	  </tr>
	</thead>
</table>

<div class="continue">
<%= link_to"買い物を続ける",root_path,class: "btn btn-primary" %><br>
</div>

<div class="info">
<%= link_to"情報入力に進む",new_order_path,class: "btn btn-success btn-lg" %>
</div>



