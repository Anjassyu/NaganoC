<div class="header">
	<div class="container">
		<div class="row header_content">
			<div class="col-xs-2">
				<%= link_to root_path do %>
				<%= image_tag 'header_logo.jpg', :size =>'250x80' %>
				<% end %>
			</div>
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<table class="table header_table">
					<tr>
						<td>ようこそ、<%= current_customer.full_name %>さん！</td>
						<td><%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-default" %></td>
						<td><%= link_to "商品一覧", products_path, class: "btn btn-default" %></td>
						<td><%= link_to "カート", cart_items_path, class: "btn btn-default" %></td>
						<td><%= link_to "ログアウト", destroy_customer_session_path,method: :delete, class: "btn btn-default" %></td>
