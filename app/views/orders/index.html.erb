<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3 class="order_index_title">注文履歴一覧</h3>
			<table class="table" border="1" style="border-collapse: collapse;">
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td>
						<%= order.postcode %><br>
						<%= order.address %><br>
						<%= order.name %>
					</td>
					<td>
						<% order.ordered_products.each do |ordered_product| %>
						<%= ordered_product.product.name %><br>
						<% end %>
					</td>
					<td><%= order.billing_amount.to_s(:delimited) %>円</td>
					<td><%= order.order_status %></td>
					<td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>