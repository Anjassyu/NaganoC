<div class="container">
  <div class="row">
    <h2 class="form-header">管理者ログイン</h2>


     <form class="form-horizontal">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


 
            <div class="form-group">
                <label class="col-sm-3 control-label" for="InputEmail">メールアドレス</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="InputEmail" placeholder="メールアドレス">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="InputPassword">パスワード</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="InputPassword" placeholder="パスワード">
                </div>
            </div>
            <div class="form-row text-center">
              <div class="col-12">
                  <button type="submit" class="btn btn-info">ログイン</button>
              </div>
            </div>
      <% end %>
     </form>

  </div>
</div>



