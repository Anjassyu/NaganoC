<div class="sign_up">
  <div class="row">
    <h3 class="head">登録情報編集</h3>

      <%= form_for(@customer) do |f| %>

          <div class="field1">
            <%= f.label :名前 %>　　　　　　　　　　
            <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>　　　
            <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji" %>
          </div>

          <div class="field1">
            <%= f.label :フリガナ %>　　　　　　　　
            <%= f.text_field :family_name_kana %>　　　
            <%= f.text_field :first_name_kana %>
          </div>

          <div class="field1">
            <%= f.label :メールアドレス %>　　　　　
            <%= f.email_field :email %>
          </div>

          <div class="field1">
            <%= f.label :郵便番号（ハイフンなし） %>
            <%= f.text_field :postcode %>
          </div>

          <div class="field1">
            <%= f.label :住所 %>　　　　　　　　　　
            <%= f.text_field :address, :size=>"50" %>
          </div>

          <div class="field1">
            <%= f.label :電話番号 %>　　　　　　　　
            <%= f.text_field :tel %>
          </div>

          <div class ="select">
            <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>　　　　　　　　　　
            <%= link_to "退会する",withdrow_customer_path,class: "btn btn-danger"%>
          </div>

      <% end %>

  </div>
</div>
