<div class="container-fluid registration mt-5">
  <div class="row">
    <div class="offset-2">
    <h3 class="guide px-3">新規会員登録</h3>
    </div>
  </div>

<div class="row mt-3">
<div class="offset-4 col-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>
    <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :family_name_kana, autocomplete: "family_name_kana" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>
</div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :tel, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>
  </div>
  </div>
<h3>既に登録済みの方</h3>
<%= link_to "こちら",new_customer_session_path,class: "btn btn-outline-danger" %>    から新規登録を行ってください。

</div>