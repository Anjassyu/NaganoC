<div class="container">
	<div class="row">

			<h3>注文履歴一覧</h3>
				<div class="col-xs-8 col-xs-offset-2">
				　	<table class="table">
							<tr class="active">
								<th>購入日時</th>
								<th>購入者</th>
								<th>注文個数</th>
								<th>注文ステータス</th>
							</tr>

						<% @orders.each do |order| %>

							<tr>
								<td><%= link_to order.created_at,"#" %></td>
								<td><%= order.customer.full_name_kanji %></td>
								<td><%= "#" %></td>
								<td><%= order.order_status %></td>
							</tr>

						<% end %>
					</table>
				</div>
			<div class="col-xs-12 text-center pagination">
					<%= paginate @orders %>
			</div>
	</div>
</div>
