<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>商品一覧</h3>
			<div style="position:absolute; top: 30px; right: 15px;">
	<%= link_to "/admin/products/new" do %>
		<span class="btn btn-primary">＋</span>
	<% end %>
</div>
			<table class="table">
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
			<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td>
					<%= link_to "/admin/products/#{product.id}" do %>
					<%= product.name %>
					<% end %>
				</td>
				<td><%= product.price %></td>
				<td><%= product.genre.name %></td>
				<td>
			<% if product.sales_status == true %>
		    販売中
		  <% elsif product.sales_status == false %>
		    販売停止中
		  <% end %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= paginate @products %>
		</div>
	</div>
</div>
