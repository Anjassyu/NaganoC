<div class="container">
	<div class="row">
		<h3 class="new_title">商品詳細</h3>
		<div class="col-xs-3">
			<%= form_for @product, url: "/admin/products/#{@product.id}" do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>
			<%= attachment_image_tag @product, :image, :fill, 150, 250, fallback: "no_image.png", size: "250x150" %>
			<%= f.attachment_field :image %>
		</div>
		<div class="col-xs-6">
			<table class="table table_show">
				<tr>
					<td>商品名　　</td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td>商品説明　</td>
					<td><%= f.text_area :description, class: "description_edit" %></td>
				</tr>
				<tr>
					<td>ジャンル　</td>
					<td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %></td>
				</tr>
				<tr>
					<td>税込価格（税抜価格）　</td>
					<td><%= f.text_field :price %>円</td>
				</tr>
				<tr>
					<td>販売ステータス　</td>
					<td>
						<%= f.select :sales_status, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --",class: "product_field" %>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div class="text-right">
		<%= f.submit "変更を保存", class: "btn btn-primary btn-lg btn_new" %>
	</div>
	<% end %>
</div>
