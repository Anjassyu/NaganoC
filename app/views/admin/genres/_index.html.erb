<div class="container">
	<div class="row">
		<div class="col-xs-6 genre_content">
			<h3>ジャンル一覧・追加</h3>
			<%= form_with model: @genre, local: true, url: "/admin/genres" do |f| %>
			<%= f.label :name, "ジャンル", class: "genre" %>
			<%= f.text_field :name, class: "genre" %>
			<%= f.radio_button :effectiveness, true, checked: true %>
			<%= f.label :effectiveness, "有効", value: true, class: "genre" %>
			<%= f.radio_button :effectiveness, false %>
			<%= f.label :effectiveness, "無効", value: false,class: "genre" %>
			<%= f.submit "追加", class: "btn btn-primary" %>
			<% end %>
			<table class="table genre_table">
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<span class="status">
						<td>
							<% if genre.effectiveness == true %>
							有効
							<% else %>
							無効
							<% end %>
						</td>
					</span>
					<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary btn-edit" %></td>
				</tr>
				<% end %>
			</table>
		</div>		
	</div>
</div>
