<div class="container">
	<div class="row">

			<h3>会員一覧</h3>
			　	<table class="table">
						<tr class="active">
							<th>会員ID</th>
							<th><%= link_to "氏名",admin_customers_path %></th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>

					<% @customers.each do |customer| %>

						<tr>
							<td><%= customer.id %></td>
							<td><%= link_to customer.fullname_kanji,admin_customers_path %></td>
							<td><%= customer.email %></td>
							<td><%= customer.admission_status_name %></td>
						</tr>

					<% end %>
				</table>
	</div>
</div>
